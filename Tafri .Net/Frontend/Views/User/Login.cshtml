@model Frontend.Models.UserLoginCollection

<h2>Login</h2>

<form asp-action="Login" method="post">
    <div class="form-group">
        <label asp-for="UserEmail"></label>
        <input asp-for="UserEmail" class="form-control" />
        <span asp-validation-for="UserEmail" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="UserPassword"></label>
        <input asp-for="UserPassword" class="form-control" type="password" />
        <span asp-validation-for="UserPassword" class="text-danger"></span>
    </div>
    <button type="submit" class="btn btn-primary">Login</button>
</form>
<p>
    <a asp-controller="User" asp-action="Register">Don't have an account? Register here.</a>
</p>
