@model SupplierDashboardCollection

@{
    ViewData["Title"] = "Supplier Dashboard";
}

<div class="container mt-5">
    <!-- Header with Logout -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <h1>Welcome, @Model.SupplierName</h1>
        <div>
            @* Check if the supplier object is in the session *@
            @{
                var supplier = Context.Session.GetString("supplier");
            }
            @if (!string.IsNullOrEmpty(supplier))
            {
                <a class="btn btn-danger" href="/Account/Logout">Logout</a>
            }
        </div>
    </div>

    <!-- Supplier Info -->
    <div class="card mb-4">
        <div class="card-header">
            <h3>Supplier Information</h3>
        </div>
        <div class="card-body">
            <p><strong>Name:</strong> @Model.SupplierName</p>
            <p><strong>Contact Number:</strong> @Model.SupplierContactNumber</p>
            <p><strong>Email:</strong> @Model.SupplierEmail</p>
            <p><strong>GST Number:</strong> @Model.SupplierGSTNumber</p>
        </div>
    </div>

    <!-- Total Revenue -->
    <div class="card mb-4">
        <div class="card-header">
            <h4>Total Revenue Generated</h4>
        </div>
        <div class="card-body">
            <h2>&#8377; @Model.TotalRevenue</h2>
        </div>
    </div>

    <!-- Action Buttons -->
    <div class="row">
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">List Packages</h5>
                    <p class="card-text">Manage and view all your packages.</p>
                    <a href="/Package/ListPackages" class="btn btn-primary">Go to Packages</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">List Bookings</h5>
                    <p class="card-text">Manage and view all bookings.</p>
                    <a href="/Supplier/ListBookings" class="btn btn-primary">Go to Bookings</a>
                </div>
            </div>
        </div>
        <div class="col-md-4 mb-4">
            <div class="card h-100 shadow-sm">
                <div class="card-body text-center">
                    <h5 class="card-title">Add Package</h5>
                    <p class="card-text">Add new packages to your offerings.</p>
                    <a href="/Package/AddPackage" class="btn btn-primary">Add Package</a>
                </div>
            </div>
        </div>
    </div>
</div>
