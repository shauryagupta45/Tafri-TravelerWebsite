@model Frontend.Models.SupplierLoginCollection

<h2>Supplier Login</h2>

<form asp-action="Login" method="post">
    @Html.AntiForgeryToken()
    <div class="form-group">
        <label asp-for="SupplierEmail"></label>
        <input asp-for="SupplierEmail" class="form-control" />
        <span asp-validation-for="SupplierEmail" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="SupplierPassword"></label>
        <input asp-for="SupplierPassword" class="form-control" type="password" />
        <span asp-validation-for="SupplierPassword" class="text-danger"></span>
    </div>
