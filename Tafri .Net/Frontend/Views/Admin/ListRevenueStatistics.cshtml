@model AdminRevenueCompiledDTO

<div class="container mt-5">
    <h2 class="mb-4">Revenue Details</h2>

    <p class="lead"><strong>Total Revenue: </strong>₹@Model.TotalRevenue</p>

    @if (Model.RevenueDetails.Any())
    {
        <table id="revenueTable" class="table table-striped table-bordered">
            <thead>
                <tr>
                    <th>Package ID</th>
                    <th>Supplier ID</th>
                    <th>Package Name</th>
                    <th>Revenue</th>
                    <th>Supplier Profit</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model.RevenueDetails)
                {
                    <tr>
                        <td>@item.PackageId</td>
                        <td>@item.SupplierId</td>
                        <td>@item.PackageName</td>
                        <td>₹@item.Revenue</td>
                        <td>₹@item.SupplierProfit</td>
                    </tr>
                }
            </tbody>
        </table>
    }
    else
    {
        <p class="text-danger">No revenue details available.</p>
    }
</div>

<script>
    $(document).ready(function () {
        $('#revenueTable').DataTable({
            "paging": true,
            "searching": true,
            "ordering": true,
            "info": true,
            "autoWidth": false,
            "lengthChange": true,
            "pageLength": 10,
            "language": {
                "search": "Search Table:",
                "paginate": {
                    "previous": "&laquo;",
                    "next": "&raquo;"
                }
            },
            "columnDefs": [
                { "orderable": false, "targets": [2] } // Disable ordering on the Package Name column
            ]
        });
    });
</script>
