                    <p class="card-text">View and manage all users.</p>
                    <a href="@Url.Action("ListUsers", "Admin")" class="btn btn-primary">Go to Page</a>
                </div>
            </div>
        </div>

        <!-- Card for Users -->
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Revenue Statistics</h5>
                    <p class="card-text">View the revenue information.</p>
                    <a href="@Url.Action("ListRevenueStatistics", "Admin")" class="btn btn-primary">Go to Page</a>
                </div>
            </div>
        </div>

    </div>
</div>