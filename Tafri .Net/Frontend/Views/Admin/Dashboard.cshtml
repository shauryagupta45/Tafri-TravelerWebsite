                    <a href="@Url.Action("ListUpcommingBookings", "Admin")" class="btn btn-primary">Go to Page</a>
                </div>
            </div>
        </div>

        <!-- Card for Packages -->
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">All Packages</h5>
                    <p class="card-text">View and manage all packages.</p>
                    <a href="@Url.Action("ListPackages", "Admin")" class="btn btn-primary">Go to Page</a>
                </div>
            </div>
        </div>

        <!-- Card for Suppliers -->
        <div class="col-md-4">
            <div class="card mb-3">
                <div class="card-body">
                    <h5 class="card-title">Suppliers</h5>
                    <p class="card-text">View and manage all suppliers.</p>
                    <a href="@Url.Action("ListSuppliers", "Admin")" class="btn btn-primary">Go to Page</a>
                </div>
            </div>
        </div>

        <!-- Card for Users -->
        <div class="col-md-4">
