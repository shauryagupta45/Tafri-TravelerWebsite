@model Frontend.Models.UpdatePackageCollection

<h2>Update Package</h2>

<form asp-action="UpdatePackage" method="post">
    <div class="form-group">
        <label asp-for="PackageName"></label>
        <input asp-for="PackageName" class="form-control" value="@Model.PackageName" />
        <span asp-validation-for="PackageName" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Source"></label>
        <input asp-for="Source" class="form-control" value="@Model.Source" />
        <span asp-validation-for="Source" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Destination"></label>
        <input asp-for="Destination" class="form-control" value="@Model.Destination" />
        <span asp-validation-for="Destination" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="FASL"></label>
        <input asp-for="FASL" class="form-control" type="text" value="@Model.FASL" />
        <span asp-validation-for="FASL" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Duration"></label>
        <input asp-for="Duration" class="form-control" type="number" value="@Model.Duration" />
        <span asp-validation-for="Duration" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="Quantity"></label>
        <input asp-for="Quantity" class="form-control" type="number" value="@Model.Quantity" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PackagePrice"></label>
        <input asp-for="PackagePrice" class="form-control" type="number" value="@Model.PackagePrice" />
        <span asp-validation-for="PackagePrice" class="text-danger"></span>
    </div>

    <div class="form-group">
        <label asp-for="PackageDesc"></label>
        <textarea asp-for="PackageDesc" class="form-control">@Model.PackageDesc</textarea>
        <span asp-validation-for="PackageDesc" class="text-danger"></span>
    </div>

    <input type="hidden" asp-for="PackageId" />

    <button type="submit" class="btn btn-primary">Update Package</button>
</form>
